{
  "name": "ngrx-actions",
  "version": "8.0.0",
  "description": "Actions and Reducer Utility Library for NGRX",
  "main": "dist/index.js",
  "scripts": {
    "build": "ng-packagr -p package.json",
    "test": "ngc -p tsconfig.spec.json && jasmine dist/spec/*.spec.js",
    "publish": "npm publish dist",
    "precommit": "lint-staged",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "prettier": "prettier --parser typescript --single-quote es5 --write \"**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://amcdnl@github.com/amcdnl/ngrx-actions.git"
  },
  "keywords": [
    "ngrx",
    "redux",
    "state",
    "store",
    "state-mangement"
  ],
  "author": "Austin McDaniel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/amcdnl/ngrx-actions/issues"
  },
  "homepage": "https://github.com/amcdnl/ngrx-actions#readme",
  "peerDependencies": {},
  "devDependencies": {
    "@angular-devkit/schematics": "^8.1.2",
    "@angular/compiler": "^8.1.2",
    "@angular/compiler-cli": "^8.1.2",
    "@angular/core": "^8.1.2",
    "@ngrx/effects": "8.1.0",
    "@ngrx/store": "8.1.0",
    "@types/jasmine": "^3.3.15",
    "husky": "^3.0.1",
    "jasmine": "^3.4.0",
    "lint-staged": "^9.2.0",
    "ng-packagr": "^5.3.0",
    "prettier": "^1.18.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.2",
    "tsickle": "^0.36.0",
    "tslint": "^5.18.0",
    "typescript": "^3.4.5",
    "zone.js": "^0.9.1"
  },
  "ngPackage": {
    "lib": {
      "entryFile": "src/index.ts"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run prettier",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2
  }
}
